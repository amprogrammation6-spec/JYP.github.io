---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'JYP Servicios Integrales - Servicios Hidráulicos Profesionales',
	description = 'Empresa especializada en servicios hidráulicos profesionales. Instalación, mantenimiento y reparación de sistemas hidráulicos.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
	}
</style>
